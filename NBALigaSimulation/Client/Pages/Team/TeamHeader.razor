<div class="card @team.Abrv">
@using Color = MudBlazor.Color

 <div class="info"> 
     <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Style="width: 120px; height: 100px; background: none;"  Color="Color.Surface">
                <img src=@($"Images/Logos/{team.Abrv}.svg")/>
            </MudAvatar>
        </CardHeaderAvatar>

        <CardHeaderContent>
            <span>@team.Region</span>
            <p>@team.Name</p>
            <MudText Typo="Typo.caption"> 43 - 39 | 7th in Western</MudText>
        </CardHeaderContent>
     </MudCardHeader>
 </div>

 <div class="overall-stats">

  <div class="stats">
     
     <div class="ppg"> 
     <p>PPG</p>
     <span>6th</span>
     <p>117.2</p>
     </div>

     <MudDivider Vertical="true" FlexItem="true" Style="width: 0.5px"/>

     <div class="rpg"> 
     <p>RPG</p>
     <span>6th</span>
     <p>45.7</p>
     </div>

      <MudDivider Vertical="true" FlexItem="true" Style="width: 0.5px" />

     <div class="apg"> 
     <p>APG</p>
     <span>15th</span>
     <p>25.2</p>
     </div>

      <MudDivider Vertical="true" FlexItem="true"  Style="width: 0.5px"/>

     <div class="oppg"> 
     <p>OPPG</p>
     <span>20th</span>
     <p>116.6</p>
     </div>

  </div>
 </div>
</div>