@using Color = MudBlazor.Color
@inject IStatsService StatsService


<div class="card @team.Abrv">

 <div class="info"> 
     <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Style="width: 120px; height: 100px; background: none;"  Color="Color.Surface">
                <img src=@($"Images/Logos/{team.Abrv}.svg")/>
            </MudAvatar>
        </CardHeaderAvatar>

        <CardHeaderContent>
            <span>@team.Region</span>
            <p>@team.Name</p>
            <MudText Typo="Typo.caption"> 43 - 39 | 7th in Western</MudText>
        </CardHeaderContent>
     </MudCardHeader>
 </div>

 <div class="overall-stats">

  <div class="stats">
     
     <div class="ppg"> 
     <p>PPG</p>
     <span>@(Util.GetOrdinal(ppgRank))</span>
     <p>@ppg</p>
     </div>

     <MudDivider Vertical="true" FlexItem="true" Style="width: 0.5px"/>

     <div class="rpg"> 
     <p>RPG</p>
      <span>@(Util.GetOrdinal(rpgRank))</span>
     <p>@rpg</p>
     </div>

      <MudDivider Vertical="true" FlexItem="true" Style="width: 0.5px" />

     <div class="apg"> 
     <p>APG</p>
      <span>@(Util.GetOrdinal(apgRank))</span>
     <p>@apg</p>
     </div>

      <MudDivider Vertical="true" FlexItem="true"  Style="width: 0.5px"/>

     <div class="oppg"> 
     <p>OPPG</p>
      <span>@(Util.GetOrdinal(oppgRank))</span>
     <p>@oppg</p>
     </div>

  </div>
 </div>
</div>