@page "/playoffs"
@inject IPlayoffsService PlayoffsService
@inject NavigationManager NavigationManager

<MudContainer>
@if (series != null)
{
		
<div class="playoff-table">
    <div class="playoff-table-content">
        <div class="playoff-table-tour">
           @foreach (var seriesItem in series)
           {
                    var serie = seriesItem.Value;

                    if (serie.SeriesId >= 1 && serie.SeriesId <= 8)
                    {
                        <div class="playoff-table-group" @onclick="() => NavigateToPlayoffsPage(serie.Id)">
                            <div class="playoff-table-pair playoff-table-pair-style">
                                <div class="playoff-table-left-player">
                                    <MudAvatar Style="vertical-align: middle; background: none" Size="Size.Small" Image=@($"Images/logos/{serie.teamOneAbrv}.svg") Square="true" />
                                    @serie.teamOneName <span class="@CheckWinner(serie.WinsTeamOne)">[@serie.WinsTeamOne]</span>
                                </div>
                                <div class="playoff-table-right-player">
                                    <MudAvatar Style="vertical-align: middle; background: none" Size="Size.Small" Image=@($"Images/logos/{serie.teamTwoAbrv}.svg") Square="true" />
                                    @serie.teamTwoName  <span class="@CheckWinner(serie.WinsTeamTwo)">[@serie.WinsTeamTwo]</span>
                                </div>
                            </div>
                        </div>
                    }
           }
        </div>

        <div class="playoff-table-tour">
            <div class="playoff-table-group">
                @foreach (var seriesItem in series)
                 {
                    var serie = seriesItem.Value;

