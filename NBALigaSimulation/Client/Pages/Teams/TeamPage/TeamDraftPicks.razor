@if (_team != null && _picks.Any())
{
    <div class="draftpicks-table-wrapper">
        <table class="draftpicks-table">
            <thead>
                <tr>
                    @foreach (var h in headings)
                    {
                        <th>@h</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var pick in _picks)
                {
                    <tr>
                        <td>@pick.Year</td>
                        <td>@pick.Round</td>
                        <td>
                            <img src=@($"../Images/Logos/{pick.TeamName}.svg") alt="Team logo" />
                        </td>
                        <td>
                            <img src=@($"../Images/Logos/{pick.Original}.svg") alt="Team logo" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container text-center p-4">
        <p>Nenhuma escolha de draft encontrada para este time.</p>
    </div>
}