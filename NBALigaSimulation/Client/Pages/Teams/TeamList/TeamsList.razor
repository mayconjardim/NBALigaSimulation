@page "/teams"
@inject ITeamService TeamService
@inject NavigationManager NavigationManager
    
<div class="title"><h5>TEAMS</h5></div>


<div class="container">
    
    @if (_teams != null && _east != null && _west != null)
    {
        @foreach (var team in _east)
        {
            <div class="team-img" @onclick="() => NavigateToTeamPage(team.Id)">
                <img src=@($"../Images/Logos/{team.Abrv}.svg") Style="vertical-align: middle; background: none" alt="Team logo">
            </div>
        }

        @foreach (var team in _west)
        {
            <div class="team-img" @onclick="() => NavigateToTeamPage(team.Id)">
                <img src=@($"../Images/Logos/{team.Abrv}.svg") Style="vertical-align: middle; background: none" alt="Team logo">
            </div>
        }
    }
</div>



