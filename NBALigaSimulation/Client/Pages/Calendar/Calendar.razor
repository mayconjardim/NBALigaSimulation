@page "/calendar"
@inject IGameService GameService

@if (_games != null)
{
    <div class="schedule-container">

        <div class="date-navigator">
            <button @onclick="() => ChangeRoundView(-1)" class="nav-arrow" aria-label="Rodada anterior">
                <i class="bi bi-chevron-left"></i>
            </button>
            <div class="date-strip">
                @foreach (var round in GetDisplayedRounds())
                {
                    <div @onclick="() => SelectRound(round)" class="date-item @(round == selectedRound ? "active" : "")" role="button">
                        <span class="day-of-week">Rodada</span>
                        <span class="day-of-month">@round</span>
                    </div>
                }
            </div>
            <button @onclick="() => ChangeRoundView(1)" class="nav-arrow" aria-label="Próxima rodada">
                <i class="bi bi-chevron-right"></i>
            </button>
        </div>

        <div class="games-for-day">
            <h2 class="games-date-header">Rodada @selectedRound</h2>
            @if (!string.IsNullOrEmpty(selectedRound) && gamesByRound.ContainsKey(selectedRound))
            {
                <table class="games-table">
                    <thead>
                        <tr>
                            <th>Partida</th>
                            <th style="text-align: right;">Resultado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var game in gamesByRound[selectedRound])
                        {
                            <tr>
                                <td class="matchup-cell">
                                    <div class="team">
                                        <img src="@($"../Images/Logos/{game.AwayTeam}.svg")" alt="@game.AwayTeam logo" />
                                        <span>@game.AwayTeam</span>
                                    </div>
                                    <span class="at-symbol">@@</span>
                                    <div class="team">
                                        <img src="@($"../Images/Logos/{game.HomeTeam}.svg")" alt="@game.HomeTeam logo" />
                                        <span>@game.HomeTeam</span>
                                    </div>
                                </td>
                                <td style="text-align: right;">
                                    @if (game.HomeTeamScore > 0)
                                    {
                                        <a class="result-link" href="game/@game.Id">
                                            @game.AwayTeamScore - @game.HomeTeamScore
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="tbd-text">A definir</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="no-games-text">Não há jogos agendados para esta rodada.</p>
            }
        </div>
    </div>
}
else
{
    <Loading></Loading>
}