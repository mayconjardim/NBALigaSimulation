                    <th colspan="3"  style="text-align: center">LOW POST</th>
                    <th colspan="3"  style="text-align: center">MID-RANGE</th>
                    <th colspan="3"  style="text-align: center">3PT</th>
                </tr>
                <tr>
                    @foreach (var h in locations)
                    {
                        <th>@h</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var stats in player.RegularStats)
                {
                    <tr>
                        <td>@stats.Season</td>
